{% extends 'base.html.twig' %}

{% block container %}
    <h1>Report list</h1>

    <div class="row">
        <div class="col-lg-12">
            <a href="{{ path('reports_new') }}">Create a new entry</a>
            <!-- /.panel-heading -->
            <div class="panel-body">
                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                
                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success">
                        {{ flash_message }}
                    </div>
                {% endfor %}
                
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Username</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for report in reports %}
                        <tr>
                            <td><a href="{{ path('reports_show', { 'id': report.id }) }}">{{ report.id }}</a></td>
                            <td>{{ report.name }}</td>
                            <td>{{ report.user.username }}</td>
                            <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('reports_show', { 'id': report.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('reports_edit', { 'id': report.id }) }}">edit</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <ul>
        <li>
            <a href="{{ path('reports_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
