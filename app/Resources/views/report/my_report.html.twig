{% extends 'base.html.twig' %}

{% block container %}
    <h1>Report</h1>
<div class="row">
        <div class="col-lg-12">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ report.id }}</td>
                        </tr>
                        <tr>
                            <td>Username</td>
                            <td>{{ report.user.username }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ report.name }}</td>
                        </tr>
                        <tr>
                            <td>Details</td>
                            <td>
                                <ul>
                                    {% for parameter in report.reportParameters%}
                                        <li>{{ parameter.parameter}}: {{ parameter.value}}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
