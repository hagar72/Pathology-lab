{% extends 'base.html.twig' %}

{% block container %}
    <h1>Report creation</h1>

    <div class="row">
        <div class="col-lg-12">
        {{ form_start(form, {'attr':{ 'id':'userbundle_user' , 'class':'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_row(form.name, {'attr':{ 'class':'form-control'} } ) }}
            </div>
            <div class="form-group">
                {{ form_row(form.user, {'attr':{ 'class':'form-control'} } ) }}
            </div>
            
            <h3>Parameters</h3>
            <fieldset class="parameters" data-prototype="{{ form_widget(form.reportParameters.vars.prototype)|e('html_attr') }}">
                {# iterate over each existing tag and render its only field: name #}
                {% for parameter in form.reportParameters %}
                    <div class="reportParameterContainer">
                        <div class="form-group">
                            {{ form_row(parameter.parameter, {'attr':{ 'class':'form-control'} } ) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(parameter.value, {'attr':{ 'class':'form-control'} } ) }}
                        </div>
                    </div>
                {% endfor %}
            </fieldset>
            
            <div id="creat-btn">
                {{ form_widget(form.submit, {'attr':{ 'class':'btn btn-danger btn-link-form-align'} }) }}
            </div>
        {{ form_end(form) }}
        </div>
    </div>

    <ul>
        <li>
            <a href="{{ path('reports_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/report/js/reportParameters.js') }}" type="text/javascript"></script>
{% endblock %}