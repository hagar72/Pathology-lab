{% extends 'base.html.twig' %}

{% block container %}
    <h1>User edit</h1>

    {{ form_start(edit_form, {'attr':{ 'id':'userbundle_user' , 'class':'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_row(edit_form.email, {'attr':{ 'class':'form-control'} } ) }}
            </div>
            <div class="form-group">
                {{ form_row(edit_form.username, {'attr':{ 'class':'form-control'} } ) }}
            </div>
            <div class="form-group">
                <div class="col-xs-7 mobile100 btn-link-form-align">
                    {{ form_errors(edit_form.enabled) }}
                    {{ form_label(edit_form.enabled, null ,{'label_attr':{ 'class':''} }) }}
                    {{ form_widget(edit_form.enabled) }}
                </div>
            </div>
            <div id="creat-btn">
                {{ form_widget(edit_form.submit, {'attr':{ 'class':'btn btn-danger btn-link-form-align'} }) }}
            </div>
        {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('users_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
