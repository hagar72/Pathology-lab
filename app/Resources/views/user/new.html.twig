{% extends 'base.html.twig' %}

{% block container %}
    <h1>User creation</h1>

    <div class="row">
        <div class="col-lg-12">
        {{ form_start(form, {'attr':{ 'id':'userbundle_user' , 'class':'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_row(form.email, {'attr':{ 'class':'form-control'} } ) }}
            </div>
            <div class="form-group">
                {{ form_row(form.username, {'attr':{ 'class':'form-control'} } ) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password.first, {'attr':{ 'class':'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password.second, {'attr':{ 'class':'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(form.role, {'attr':{ 'class':'form-control'} }) }}
            </div>
            <div class="form-group">
                <div class="col-xs-7 mobile100 btn-link-form-align">
                    {{ form_errors(form.enabled) }}
                    {{ form_label(form.enabled, null ,{'label_attr':{ 'class':''} }) }}
                    {{ form_widget(form.enabled) }}
                </div>
            </div>
            <div id="creat-btn">
                {{ form_widget(form.submit, {'attr':{ 'class':'btn btn-danger btn-link-form-align'} }) }}
            </div>
        {{ form_end(form) }}
        
        <ul>
            <li>
                <a href="{{ path('users_index') }}">Back to the list</a>
            </li>
        </ul>
        </div>
            </div>
{% endblock %}
