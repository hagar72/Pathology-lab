{% extends "UserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid">
    <div class="row">

        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="clearfix fos_user_resetting_request">
            <div class="col-lg-12">
                <div class="form-group">
                    {% if invalid_username is defined %}
                        <h1>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</h1>
                    {% endif %}

                    <h1 for="username">{{ 'resetting.request.username'|trans }}</h1>
                    <input type="text" id="username" name="username" required="required" class="form-control" />
                </div>
            
                <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-lg btn-success btn-block" />
            </div>
        </form>
    </div>
</div>
{% endblock fos_user_content %}
